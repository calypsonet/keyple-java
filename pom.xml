<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.keyple</groupId>
	<artifactId>calypso-root</artifactId>
	<version>1.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<description>SDK Calypso</description>
	<modules>
		<module>calypso</module>
		<module>seproxy</module>
		<module>smartCardIOPlugin</module>
	</modules>



	<properties>
		<junit.version>4.12</junit.version>
		<mockito.version>1.10.19</mockito.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.6</java.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>

		<!-- gestion des versions des artefacts -->
		<jacoco.version>0.7.9</jacoco.version>

		<!-- Sonar -->
		<sonar.projectName>SDK Calypso</sonar.projectName>
		<sonar-maven-plugin.version>3.0.2</sonar-maven-plugin.version>
		<sonar.exclusions>
			src/main/webapp/swagger/**/*.*,
			src/main/webapp/api/**/*.*
		</sonar.exclusions>
		<sonar.sources>${project.basedir}/src/main/</sonar.sources>
		<project.testresult.directory>${project.build.directory}/test-results</project.testresult.directory>
		<sonar.jacoco.reportPath>${project.testresult.directory}/coverage/jacoco/jacoco.exec</sonar.jacoco.reportPath>
		<sonar.jacoco.itReportPath>${project.testresult.directory}/coverage/jacoco/jacoco-it.exec</sonar.jacoco.itReportPath>
		<sonar.java.codeCoveragePlugin>jacoco</sonar.java.codeCoveragePlugin>
		<sonar.surefire.reportsPath>${project.testresult.directory}/surefire-reports</sonar.surefire.reportsPath>
	</properties>



